<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="odoo_owl_app.todo_form" owl="1">
        <div id="todo-form">
            <form class="d-flex" t-on-submit="handleSubmit">
                <input class="form-control ms-2" type="text" placeholder="Add a new task" t-model="state.input" t-ref="input"/>
                <button class="btn btn-primary d-flex justify-content-center align-items-center" type="submit">Add
                    <span class="fa fa-plus-circle me-1"></span>
                </button>
            </form>
        </div>
    </t>
</templates>