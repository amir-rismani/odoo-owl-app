<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="odoo_owl_app.todo" owl="1">
        <div class="todo d-flex justify-content-between align-items-center gap-3 bg-secondary p-4 rounded my-3">
            <div class="todo__check">
                <input type="checkbox" t-att-checked="props.todo.is_completed" t-att-value="props.todo.id" t-on-change="props.handleChangeState"/>
            </div>
            <div class="todo__content flex-grow-1">
                <t t-esc="props.todo.title"/>
            </div>
            <div class="todo__action d-flex justify-content-between align-items-center gap-3">
                <span class="fa fa-pencil-square-o fa-lg text-primary text-opacity-75 cursor-pointer" t-on-click="()=>props.handleEdit(props.todo.id)"/>
                <span class="fa fa-trash-o fa-lg text-danger text-opacity-75 cursor-pointer" t-on-click="()=>props.handleRemove(props.todo.id)"/>
            </div>
        </div>
    </t>
</templates>