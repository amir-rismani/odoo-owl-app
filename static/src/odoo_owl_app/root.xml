            <main>
                <TodoForm onAdd.bind="onAdd"/>
                <Todos todos="state.todos" handleChangeState.bind="handleChangeState" handleEdit.bind="handleEdit" handleRemove.bind="handleRemove"/>
            </main>
        </WebsiteLayout>
    </t>
</templates>